{
	"compilerOptions": {
		"target": "ES6",
		"module": "ES2015",
		"strict": true,
		"outDir": "dist",
		"baseUrl": "src",
		"resolveJsonModule": true,
		"moduleResolution": "node",
		"paths": {
			"@utils/*": ["utils/*"],
			"@models/*": ["models/*"],
			"@global/*": ["../shared/*"],
			"@src/*": ["./*"]
		},
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true
	},
	"ts-node": {
		"compilerOptions": { "module": "CommonJS" }
	}
}
